<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>게시물 목록</title>
  </head>
  <body>
    <h1>게시물 목록</h1>
    <form method="get" action="/posts/web">
      <input type="text" name="q" placeholder="검색어" value="{{q}}" />
      <select name="limit">
        <option value="5" {{#if (eq limit 5)}}selected{{/if}}>5</option>
        <option value="10" {{#if (eq limit 10)}}selected{{/if}}>10</option>
        <option value="20" {{#if (eq limit 20)}}selected{{/if}}>20</option>
      </select>
      <button type="submit">검색</button>
    </form>

    <ul>
      {{#each posts}}
        <li>
          <a href="/posts/web/{{this._id}}">{{this.title}}</a>
          <div>작성자: {{this.author}}</div>
        </li>
      {{/each}}
    </ul>

    <div>
      {{#if prevExists}}
        <a href="{{prevUrl}}">이전</a>
      {{/if}}
      {{#if nextExists}}
        <a href="{{nextUrl}}">다음</a>
      {{/if}}
    </div>
  </body>
</html>